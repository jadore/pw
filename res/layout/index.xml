<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_message_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="-5dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView
            android:id="@+id/messageView"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:minWidth="15dp"
            android:background="@drawable/message_label"
            android:gravity="center"
            android:visibility="invisible"
            />
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="群友通讯录"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_add_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="创建"
            android:textColor="@color/white"
            android:textSize="15sp"
           	android:layout_alignParentRight="true"
			android:paddingRight="12dp"
			android:drawablePadding="8dp"
			android:onClick="ButtonClick"
            />
    </RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="87dp"
        >
        
        <ImageView 
            android:id="@+id/avatarImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="21dp"
            android:scaleType="centerCrop"
            android:onClick="ButtonClick"
            />
        
        <LinearLayout 
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:id="@+id/phoneLayout"
            android:onClick="ButtonClick"
            android:clickable="true"
            >
            <Button 
                android:id="@+id/phoneButton"
                android:layout_gravity="center_horizontal"
            	android:layout_width="43dp"
            	android:layout_height="43dp"
            	android:background="@drawable/btn_phone"
            	android:onClick="ButtonClick"
            	
            />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="通讯录"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:id="@+id/activityLayout"
            android:onClick="ButtonClick"
            android:clickable="true"
            >
            <Button 
                android:id="@+id/activityButton"
                android:layout_gravity="center_horizontal"
            	android:layout_width="43dp"
            	android:layout_height="43dp"
            	android:background="@drawable/btn_activity"
            	android:onClick="ButtonClick"
            />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="发现"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:id="@+id/cardLayout"
            android:onClick="ButtonClick"
            android:clickable="true"
            >
            <Button 
                android:id="@+id/cardButton"
                android:layout_gravity="center_horizontal"
            	android:layout_width="43dp"
            	android:layout_height="43dp"
            	android:background="@drawable/btn_card"
            	android:onClick="ButtonClick"
            />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="名片"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	
</LinearLayout>
